<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.redragon-volume-sync" path="/org/gnome/shell/extensions/redragon-volume-sync/">
    <key name="auto-sync" type="b">
      <default>true</default>
      <summary>Automatic volume synchronization</summary>
      <description>Automatically synchronize volumes when changes are detected</description>
    </key>
    <key name="check-interval" type="i">
      <default>3</default>
      <range min="1" max="30"/>
      <summary>Check interval</summary>
      <description>Interval in seconds to check for volume changes</description>
    </key>
  </schema>
</schemalist>
